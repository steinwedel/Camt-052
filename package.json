{
  "name": "camt52-viewer",
  "version": "1.0.0",
  "description": "CAMT.052 v8 XML transaction viewer",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "npm run build:all",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "build:win": "pkg . --targets node18-win-x64 --output dist/camt52-viewer-windows.exe --compress GZip",
    "build:mac": "pkg . --targets node18-macos-x64 --output dist/camt52-viewer-macos --compress GZip",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/camt52-viewer-linux --compress GZip"
  },
  "pkg": {
    "assets": [
      "public/**/*"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "camt052",
    "xml",
    "banking",
    "transactions"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.3.2",
    "multer": "^1.4.5-lts.1"
  }
}
