{
  "name": "camt52-viewer",
  "version": "1.0.0",
  "description": "CAMT.052 v8 XML transaction viewer",
  "main": "electron.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "build": "node build.js",
    "build:server": "node build.js server",
    "build:server:win": "node build.js server:windows",
    "build:server:mac": "node build.js server:macos",
    "build:server:linux": "node build.js server:linux",
    "build:desktop": "node build.js desktop",
    "build:desktop:all": "node build.js desktop:all",
    "build:desktop:win": "node build.js desktop:windows",
    "build:desktop:mac": "node build.js desktop:macos",
    "build:desktop:linux": "node build.js desktop:linux"
  },
  "pkg": {
    "assets": [
      "public/**/*"
    ],
    "outputPath": "dist-server"
  },
  "keywords": [
    "camt052",
    "xml",
    "banking",
    "transactions"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.3.2",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "pkg": "^5.8.1"
  },
  "build": {
    "appId": "com.camt52viewer.app",
    "productName": "CAMT.052 Viewer",
    "directories": {
      "output": "dist-desktop"
    },
    "files": [
      "electron.js",
      "server.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "server.js",
      "public/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        {
          "target": "zip",
          "arch": "universal"
        },
        {
          "target": "dmg",
          "arch": "universal"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Finance"
    }
  }
}
